{
  "name": "pulse",
  "version": "1.0.0",
  "description": "Lightweight health-check service with Redis logging",
  "main": "src/server.js",
  "scripts": {
    "dev": "node src/server.js",
    "lint": "npx eslint .",
    "test": "jest --coverage",
    "redis": "docker-compose up -d redis",
    "redis:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
