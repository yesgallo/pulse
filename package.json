{
  "name": "pulse",
  "version": "1.0.0",
  "description": "Lightweight health-check service for CI/CD and monitoring",
"main": "dist/server.js",
"scripts": {
  "dev": "node src/server.js",
  "start": "node dist/server.js",
  "build": "rm -rf dist && mkdir dist && cp -r src/* dist/",
  "lint": "npx eslint .",
  "test": "jest --coverage",
  "test:watch": "jest --watch",
  "redis": "docker-compose up -d redis"
},
"keywords": [
    "health-check",
    "monitoring",
    "ci",
    "devops",
    "express"
  ],
  "author": "yesgallo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
